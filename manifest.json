{
  "manifest_version": 3,
  "name": "YouTube Reklama Skip (Gemini)",
  "version": "1.0",
  "description": "Автоматический пропуск рекламы и интро на YouTube с помощью Gemini",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/watch*"
      ],
      "js": [
        "content/youtube.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://gemini.google.com/app*"
      ],
      "js": [
        "content/gemini.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
