{
  "manifest_version": 3,
  "name": "YouTube Reklama Skip (Gemini)",
  "version": "1.1",
  "description": "Автоматический пропуск рекламы и интро на YouTube с помощью Gemini",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "nativeMessaging"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content/youtube.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
